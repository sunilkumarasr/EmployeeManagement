<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150dp"
        android:gravity="center"
        android:paddingLeft="@dimen/_16dp"
        android:paddingRight="@dimen/_16dp"
        android:paddingTop="@dimen/_16dp"
        android:paddingBottom="@dimen/_16dp"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        >
        <RelativeLayout
            android:layout_width="@dimen/_70dp"
            android:layout_height="@dimen/_70dp">
            <ImageView
                android:id="@+id/profile_img"
                android:layout_width="@dimen/_60dp"
                android:layout_height="@dimen/_60dp"
                android:src="@drawable/img_profile_avatar"
                />

        </RelativeLayout>
        <com.royalitpark.employeemanagement.customviews.CustomTextView
            style="@style/style_textview_small"
            android:textColor="@color/white"
            android:text="Good Morning"
            android:id="@+id/txt_name"
            android:textSize="@dimen/_16sp"
            />
        <com.royalitpark.employeemanagement.customviews.CustomTextView
            style="@style/style_textview_small"
            android:textColor="@color/white"
            android:id="@+id/txt_mobile"
            android:text="+91 9999 9999 99"
            android:textStyle="bold"
            android:textSize="@dimen/_16sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/_12dp"
        >
        <com.royalitpark.employeemanagement.customviews.CustomTextView
            android:id="@+id/txt_view_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textSize="@dimen/_22sp"

            android:layout_margin="@dimen/_5dp"

            />
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="@dimen/_5dp"
            app:dividerColor="@color/colorPrimary"
            />
        <com.royalitpark.employeemanagement.customviews.CustomTextView
            android:id="@+id/txt_view_attendance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Attendance"
            android:textSize="@dimen/_22sp"

            android:layout_margin="@dimen/_5dp"

            />
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="@dimen/_5dp"
            app:dividerColor="@color/colorPrimary"
            />
        <com.royalitpark.employeemanagement.customviews.CustomTextView
            android:id="@+id/txt_leaves"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Leaves"
            android:textSize="@dimen/_22sp"

            android:layout_margin="@dimen/_5dp"

            />
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="@dimen/_5dp"
            app:dividerColor="@color/colorPrimary"
            />
        <com.royalitpark.employeemanagement.customviews.CustomTextView
            android:id="@+id/txt_holidays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/HolidayList"
            android:textSize="@dimen/_22sp"

            android:layout_margin="@dimen/_5dp"

            />
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="@dimen/_5dp"
            app:dividerColor="@color/colorPrimary"
            />  <com.royalitpark.employeemanagement.customviews.CustomTextView
            android:id="@+id/txt_documents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/MyDocuments"
            android:textSize="@dimen/_22sp"

            android:layout_margin="@dimen/_5dp"

            />
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="@dimen/_5dp"
            app:dividerColor="@color/colorPrimary"
            />
        <com.royalitpark.employeemanagement.customviews.CustomTextView
            android:id="@+id/txt_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Settings"
            android:textSize="@dimen/_22sp"

            android:layout_margin="@dimen/_5dp"

            />
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="@dimen/_5dp"
            app:dividerColor="@color/colorPrimary"
            />
       <!-- <royalitparkpark.employeemanagement.customviews.CustomTextView
            android:id="@+id/txt_bank_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/BankDetails"
            android:textSize="@dimen/_22sp"
            android:layout_margin="@dimen/_5dp"
            />
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="@dimen/_5dp"
            app:dividerColor="@color/colorPrimary"
            />-->
        <com.royalitpark.employeemanagement.customviews.CustomTextView
            android:id="@+id/txt_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/logout"
            android:textSize="@dimen/_22sp"
            android:layout_margin="@dimen/_5dp"
            />
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="@dimen/_5dp"
            app:dividerColor="@color/colorPrimary"
            />
    </LinearLayout>
</LinearLayout>