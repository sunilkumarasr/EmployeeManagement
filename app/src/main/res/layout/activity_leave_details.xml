<?xml version="1.0" encoding="utf-8"?>
  <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
              android:orientation="vertical"
    tools:context="com.royalitpark.employeemanagement.ui.leaves.LeaveDetailsActivity">
  <LinearLayout
                android:id="@+id/lnr_appbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@drawable/img_corner_rectangle_small"
                android:paddingLeft="@dimen/_16dp"
                android:paddingRight="@dimen/_16dp"
                android:layout_marginLeft="-8dp"
                android:layout_marginRight="-8dp"
                android:gravity="center_vertical"
                android:minHeight="?attr/actionBarSize"
                android:orientation="horizontal"
                >
    <LinearLayout
                  android:onClick="onBack"
                  android:layout_width="wrap_content"
                  android:padding="@dimen/_8dp"
                  android:layout_height="wrap_content">
      <ImageView
                    android:id="@+id/img_menu"
                    android:layout_width="@dimen/_24dp"
                    android:layout_height="@dimen/_24dp"
                    android:src="@drawable/img_back_left"

                    />
    </LinearLayout>
    <com.royalitpark.employeemanagement.customviews.CustomTextView
                  android:fontFamily="@font/montserrat_regular"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:text="@string/leavedetails"
                  android:textSize="@dimen/_16sp"
                  android:layout_weight="1"
                  android:layout_marginLeft="@dimen/_12dp"
                  android:singleLine="true"
                  android:ellipsize="marquee"
                  android:textColor="@color/white"
                  />


  </LinearLayout>

  <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/color_white_5"
                android:layout_margin="@dimen/_16dp"
                >

    <com.royalitpark.employeemanagement.customviews.CustomTextView
        android:id="@+id/type"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:fontFamily="@font/montserrat_regular"
                  android:background="@drawable/rectangle_edittext_white"
                  android:padding="@dimen/_5dp"
                  android:text="@string/priviezedleave"
                  android:textSize="@dimen/_18sp"
                  android:layout_margin="@dimen/_12dp"
                  android:textStyle="bold"

                  android:layout_gravity="center_horizontal"

                  />
    <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  >
      <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5dp"
                    >
        <com.royalitpark.employeemanagement.customviews.CustomTextView
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:text="Name"
                      android:textSize="@dimen/_16sp"
                      android:layout_weight="1"
                      android:fontFamily="@font/montserrat_regular"
                      android:textStyle="bold"
                      />
        <com.royalitpark.employeemanagement.customviews.CustomTextView
                      android:id="@+id/txt_name"
                      android:layout_width="0dp"
                      android:layout_marginLeft="@dimen/_8dp"
                      android:layout_height="wrap_content"
                      android:text="Employee Name"
                      android:textSize="@dimen/_16sp"
                      android:layout_weight="1"
                      />
      </LinearLayout>
      <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="1dp" app:dividerColor="@color/black"
                    android:layout_margin="@dimen/_4dp"
                    />
      <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5dp"

                    >
        <com.royalitpark.employeemanagement.customviews.CustomTextView

                      android:layout_height="wrap_content"
                      android:text="Applied On"
                      android:layout_weight="1"
                      android:layout_width="0dp"
                      android:fontFamily="@font/montserrat_regular"
                      android:textStyle="bold"
                      android:textSize="@dimen/_16sp"
                      />
        <com.royalitpark.employeemanagement.customviews.CustomTextView
                      android:id="@+id/txt_leave_apply_date"
                      android:layout_width="0dp"            android:layout_height="wrap_content"
                      android:text="9 Sep 2023"
                      android:layout_marginLeft="@dimen/_8dp"
                      android:textSize="@dimen/_16sp"
                      android:layout_weight="1"
                      />
      </LinearLayout>
      <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="1dp" app:dividerColor="@color/black"
                    android:layout_margin="@dimen/_4dp"
                    />
      <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5dp"

                    >
        <com.royalitpark.employeemanagement.customviews.CustomTextView
                      android:textSize="@dimen/_16sp"
                      android:layout_height="wrap_content"
                      android:text="Leave Date"
                      android:layout_weight="1"
                      android:layout_width="0dp"
                      android:fontFamily="@font/montserrat_regular"
                      android:textStyle="bold"
                      />
        <com.royalitpark.employeemanagement.customviews.CustomTextView
                      android:id="@+id/txt_leave_on_date"
                      android:layout_width="0dp"            android:layout_height="wrap_content"
                      android:text="9 Sep 2023"
                      android:layout_marginLeft="@dimen/_8dp"
                      android:textSize="@dimen/_16sp"
                      android:layout_weight="1"
                      />
      </LinearLayout>
      <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="1dp" app:dividerColor="@color/black"
                    android:layout_margin="@dimen/_4dp"
                    />
      <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5dp"

                    >
        <com.royalitpark.employeemanagement.customviews.CustomTextView
                      android:textSize="@dimen/_16sp"
                      android:layout_height="wrap_content"
                      android:text="Duration"
                      android:layout_weight="1"
                      android:layout_width="0dp"
                      android:fontFamily="@font/montserrat_regular"
                      android:textStyle="bold"
                      />
        <com.royalitpark.employeemanagement.customviews.CustomTextView
                      android:id="@+id/txt_leave_duration"
                      android:layout_width="0dp"
                      android:textSize="@dimen/_16sp"
                      android:layout_height="wrap_content"
                      android:text="2 day(s)"
                      android:layout_marginLeft="@dimen/_8dp"
                      android:layout_weight="1"
                      />
      </LinearLayout>
      <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="1dp" app:dividerColor="@color/black"
                    android:layout_margin="@dimen/_4dp"
                    />
      <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5dp"

                    >
        <com.royalitpark.employeemanagement.customviews.CustomTextView

                      android:layout_height="wrap_content"
                      android:text="Reason"
                      android:layout_weight="1"
                      android:layout_width="0dp"
                      android:textSize="@dimen/_16sp"
                      android:fontFamily="@font/montserrat_regular"
                      android:textStyle="bold"
                      />
        <com.royalitpark.employeemanagement.customviews.CustomTextView
                      android:id="@+id/txt_leave_reason"
                      android:layout_width="0dp"
                      android:textSize="@dimen/_16sp"
                      android:layout_height="wrap_content"
                      android:text="Health Issue"
                      android:layout_marginLeft="@dimen/_8dp"
                      android:layout_weight="1"
                      />
      </LinearLayout>
      <com.google.android.material.divider.MaterialDivider
          android:layout_width="match_parent"
          android:layout_height="1dp" app:dividerColor="@color/black"
          android:layout_margin="@dimen/_4dp"
          />
      <CheckBox
          android:visibility="gone"
          android:id="@+id/check_half_day"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/request_halfday"
          android:textStyle="bold"
          android:clickable="false"
          android:enabled="false"
          android:fontFamily="@font/montserrat_regular"
          />

      <androidx.appcompat.widget.AppCompatButton android:id="@+id/btn_allow"
                    style="@style/style_button"
                    android:layout_gravity="center"
                    android:text="@string/requested"
                    android:textColor="@color/black"
                    android:background="@drawable/rectangle_bio_data"
                    android:minEms="7"
                    />
    </LinearLayout>
  </LinearLayout>
  </LinearLayout>