<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.royalitpark.employeemanagement.ui.dashboard.ProfileFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/_48dp"
        android:paddingRight="@dimen/_16dp"
        android:paddingBottom="@dimen/_5dp"
        android:visibility="gone"
        android:background="@drawable/img_corner_rectangle">
        <com.royalitpark.employeemanagement.customviews.CirleImageView
            android:layout_width="@dimen/_60dp"
            android:layout_height="@dimen/_60dp"
            android:src="@drawable/img_profile_avatar"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_12dp"
            android:orientation="vertical">
            <com.royalitpark.employeemanagement.customviews.CustomTextView
                android:id="@+id/txt_wish"
                style="@style/style_textview_small"
                android:textColor="@color/white"
                android:text="Good Morning"
                android:textSize="@dimen/_16sp"/>
            <com.royalitpark.employeemanagement.customviews.CustomTextView
               android:id="@+id/txt_name"
                style="@style/style_textview_small"
                android:textColor="@color/white"
                android:text="Good Morning"
                android:textStyle="bold"
                android:textSize="@dimen/_16sp"/>
        </LinearLayout>


    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/_16dp"
            android:paddingBottom="@dimen/_20dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:id="@+id/view_attendance"
                    android:layout_width="wrap_content"
                    app:cardBackgroundColor="@color/color_fbfb"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/_12dp"
                    app:contentPadding="@dimen/_12dp"
                    android:layout_margin="@dimen/_12dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <ImageView
                            android:layout_width="@dimen/_70dp"
                            android:layout_height="@dimen/_70dp"
                            android:padding="@dimen/_16dp"
                            android:src="@drawable/img_profile_attendance"
                            android:background="@drawable/circule_img_background"
                            />
                        <com.royalitpark.employeemanagement.customviews.CustomTextView
                            style="@style/style_textview"
                            android:text="@string/ViewAttendance"
                            android:textStyle="bold"
                            android:minLines="2"
                            android:textSize="@dimen/_16sp"
                            />
                    </LinearLayout>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/view_leave"
                    android:layout_width="wrap_content"
                    app:cardBackgroundColor="@color/color_fbfb"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/_12dp"
                    app:contentPadding="@dimen/_12dp"
                    android:layout_margin="@dimen/_12dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <ImageView
                            android:layout_width="@dimen/_70dp"
                            android:layout_height="@dimen/_70dp"
                            android:padding="@dimen/_16dp"
                            android:src="@drawable/img_profile_leave"
                            android:background="@drawable/circule_img_background"
                            />
                        <com.royalitpark.employeemanagement.customviews.CustomTextView
                            style="@style/style_textview"
                            android:text="@string/RequestLeave"
                            android:textStyle="bold"
                            android:minLines="2"
                            android:textSize="@dimen/_16sp"
                            />
                    </LinearLayout>


                </androidx.cardview.widget.CardView>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/view_alaram"
                    android:layout_width="wrap_content"
                    app:cardBackgroundColor="@color/color_fbfb"
                    android:layout_weight="1"

                    app:cardCornerRadius="@dimen/_12dp"
                    app:contentPadding="@dimen/_12dp"
                    android:layout_margin="@dimen/_12dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <ImageView
                            android:layout_width="@dimen/_70dp"
                            android:layout_height="@dimen/_70dp"
                            android:padding="@dimen/_16dp"
                            android:src="@drawable/img_profile_alaram"
                            android:background="@drawable/circule_img_background"
                            />
                        <com.royalitpark.employeemanagement.customviews.CustomTextView
                            style="@style/style_textview"
                            android:text="@string/SetAlarm"
                            android:textStyle="bold"
                            android:minLines="2"
                            android:textSize="@dimen/_16sp"
                            />
                    </LinearLayout>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/view_business"
                    android:layout_width="wrap_content"
                    app:cardBackgroundColor="@color/color_fbfb"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/_12dp"
                    app:contentPadding="@dimen/_12dp"
                    android:layout_margin="@dimen/_12dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <ImageView
                            android:layout_width="@dimen/_70dp"
                            android:layout_height="@dimen/_70dp"
                            android:padding="@dimen/_16dp"
                            android:src="@drawable/img_profile_business"
                            android:background="@drawable/circule_img_background"
                            />
                        <com.royalitpark.employeemanagement.customviews.CustomTextView
                            style="@style/style_textview"
                            android:text="@string/AddBusiness"
                            android:textStyle="bold"
                            android:minLines="2"
                            android:textSize="@dimen/_16sp"
                            />
                    </LinearLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:id="@+id/view_holiday"
                    android:layout_width="wrap_content"
                    app:cardBackgroundColor="@color/color_fbfb"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/_12dp"
                    app:contentPadding="@dimen/_12dp"
                    android:layout_margin="@dimen/_12dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <ImageView
                            android:layout_width="@dimen/_70dp"
                            android:layout_height="@dimen/_70dp"
                            android:padding="@dimen/_16dp"
                            android:src="@drawable/img_profile_holiday_list"
                            android:background="@drawable/circule_img_background"
                            />
                        <com.royalitpark.employeemanagement.customviews.CustomTextView
                            style="@style/style_textview"
                            android:text="@string/HolidayList"
                            android:textStyle="bold"
                            android:minLines="2"
                            android:textSize="@dimen/_16sp"
                            />
                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/view_settings"
                    android:layout_width="wrap_content"
                    app:cardBackgroundColor="@color/color_fbfb"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/_12dp"
                    app:contentPadding="@dimen/_12dp"
                    android:layout_margin="@dimen/_12dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <ImageView
                            android:layout_width="@dimen/_70dp"
                            android:layout_height="@dimen/_70dp"
                            android:padding="@dimen/_16dp"
                            android:src="@drawable/img_profile_settings"
                            android:background="@drawable/circule_img_background"
                            />
                        <com.royalitpark.employeemanagement.customviews.CustomTextView
                            style="@style/style_textview"
                            android:text="@string/Settings"
                            android:textStyle="bold"
                            android:minLines="2"
                            android:textSize="@dimen/_16sp"
                            />
                    </LinearLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:id="@+id/view_documents"
                    android:layout_width="wrap_content"
                    app:cardBackgroundColor="@color/color_fbfb"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/_12dp"
                    app:contentPadding="@dimen/_12dp"
                    android:layout_margin="@dimen/_12dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <ImageView
                            android:layout_width="@dimen/_70dp"
                            android:layout_height="@dimen/_70dp"
                            android:padding="@dimen/_16dp"
                            android:src="@drawable/img_profile_docs"
                            android:background="@drawable/circule_img_background"
                            />
                        <com.royalitpark.employeemanagement.customviews.CustomTextView
                            style="@style/style_textview"
                            android:text="@string/MyDocuments"
                            android:textStyle="bold"
                            android:minLines="2"
                            android:textSize="@dimen/_16sp"
                            />
                    </LinearLayout>


                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/view_attendance_reminder"
                    android:layout_width="wrap_content"
                    app:cardBackgroundColor="@color/color_fbfb"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/_12dp"
                    app:contentPadding="@dimen/_12dp"
                    android:layout_margin="@dimen/_12dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/view_notify"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <ImageView
                            android:layout_width="@dimen/_70dp"
                            android:layout_height="@dimen/_70dp"
                            android:padding="@dimen/_16dp"
                            android:src="@drawable/img_profile_notification"
                            android:background="@drawable/circule_img_background"
                            />
                        <com.royalitpark.employeemanagement.customviews.CustomTextView

                            style="@style/style_textview"
                            android:text="@string/AttendanceReminder"
                            android:textStyle="bold"
                            android:minLines="2"
                            android:textSize="@dimen/_16sp"
                            />
                    </LinearLayout>


                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </LinearLayout>

    </ScrollView>



</LinearLayout>