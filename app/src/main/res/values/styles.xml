    <style name="radio_unpaid" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:background">@drawable/unpaid_drawable_selector</item>
        <item name="android:textColor">@drawable/unpaid_color_selector</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/_42dp</item>
        <item name="android:minEms">8</item>
        <item name="android:layout_margin">@dimen/_5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:enabled">false</item>
        <item name="android:padding">@dimen/_5dp</item>
