<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:contentPadding="@dimen/_5dp"
    android:layout_margin="@dimen/_5dp"
    app:cardCornerRadius="@dimen/_8dp"
    app:cardBackgroundColor="@color/color_fbfb"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5dp"
        >
    <com.royalitpark.employeemanagement.customviews.CustomTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Type:"
        android:textSize="@dimen/_16sp"

        android:layout_weight="1"
        />
        <com.royalitpark.employeemanagement.customviews.CustomTextView
            android:id="@+id/txt_leave_type"
            android:layout_width="0dp"
            android:layout_marginLeft="@dimen/_8dp"
            android:layout_height="wrap_content"
            android:text="Privileged Leave"
            android:layout_weight="1"
            android:textSize="@dimen/_16sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5dp"

        >
    <com.royalitpark.employeemanagement.customviews.CustomTextView

        android:layout_height="wrap_content"
        android:text="Applied On:"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:textSize="@dimen/_16sp"

        />
        <com.royalitpark.employeemanagement.customviews.CustomTextView
            android:id="@+id/txt_leave_apply_date"
            android:layout_width="0dp"            android:layout_height="wrap_content"
            android:text="9 Sep 2023"
            android:layout_marginLeft="@dimen/_8dp"
            android:layout_weight="1"
            android:textSize="@dimen/_16sp"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5dp"

        >
    <com.royalitpark.employeemanagement.customviews.CustomTextView

        android:layout_height="wrap_content"
        android:text="Leave Date:"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:textSize="@dimen/_16sp"

        />
        <com.royalitpark.employeemanagement.customviews.CustomTextView
            android:id="@+id/txt_leave_on_date"
            android:layout_width="0dp"            android:layout_height="wrap_content"
            android:text="9 Sep 2023"
            android:layout_marginLeft="@dimen/_8dp"
            android:layout_weight="1"
            android:textSize="@dimen/_16sp"

            />
    </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_leave_status"
android:fontFamily="@font/montserrat_regular"
            android:text="Status"
            android:layout_margin="@dimen/_5dp"
            android:textStyle="bold"
            android:textSize="@dimen/_16sp"
android:textColor="@color/colorPrimary"
            android:layout_gravity="center"

            />

    </LinearLayout>
</androidx.cardview.widget.CardView>