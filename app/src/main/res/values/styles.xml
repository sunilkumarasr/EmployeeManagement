<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="style_edittext" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/color_edittext</item>
        <item name="android:textColorHint">@color/color_edittext</item>

        <item name="android:paddingLeft">@dimen/_16dp</item>
        <item name="android:paddingRight">@dimen/_16dp</item>
        <item name="android:minHeight">@dimen/_42dp</item>

        <item name="android:layout_margin">@dimen/_8dp</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">text</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="style_textview" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_18sp</item>

        <item name="android:layout_margin">@dimen/_8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="style_textview_small" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_12sp</item>

        <item name="android:layout_margin">@dimen/_2dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="style_button" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/_42dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rectangle_button</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minEms">6</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:minWidth">@dimen/_120dp</item>

        <item name="android:layout_margin">@dimen/_16dp</item>
        <item name="android:textSize">@dimen/_21sp</item>
    </style>
    <style name="style_otpedittext" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">@dimen/_42dp</item>
        <item name="android:layout_height">@dimen/_42dp</item>
        <item name="android:background">@drawable/rectangle_otp_edittext</item>
        <item name="android:textColor">@color/color_edittext</item>
        <item name="android:textColorHint">@color/color_edittext</item>


        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:maxLength">1</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">number</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="DialogTheme">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:colorBackground">@color/transparent</item>
        <!--<item name="android:windowEnterAnimation">@anim/zoom_out</item>
        <item name="android:windowExitAnimation">@anim/zoom_in</item>-->
    </style>
    <style name="ThemeDialogCustom">

        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <color name="transparent">#0000</color>
    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/spinner_drawable</item>
    </style>

    <style name="radio_present" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:background">@drawable/present_drawable_selector</item>
        <item name="android:textColor">@drawable/present_color_selector</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/_42dp</item>
        <item name="android:minEms">8</item>
        <item name="android:layout_margin">@dimen/_5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:padding">@dimen/_5dp</item>
        <item name="android:enabled">false</item>

    </style>
